                    @await Component.InvokeAsync("Menu")

                </div>
                <!--меню сайта - конец-->
                
@*              <!--меню сайта-->
                <a class="navbar-brand" href="#">WebLabsV06</a>
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" asp-action="Index" asp-controller="Home">Лб 1</a>
                    <a class="nav-item nav-link" asp-controller="Product" asp-action="Index">Каталог</a>
